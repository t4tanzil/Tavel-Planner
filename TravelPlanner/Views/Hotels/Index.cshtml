@model IEnumerable<TravelPlanner.Models.Hotel>

@{
    ViewData["Title"] = "Index";
}
@section Styles {
    <!-- Include DataTables CSS for table sorting and filtering -->
    <link rel="stylesheet" href="~/css/datatables.min.css" />
}
<h1>Hotels</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stars)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.Contact) *@
            @* </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Attraction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stars)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.Contact) *@
            @* </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Attraction.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
                @if (User.Identity.IsAuthenticated)
                {
            <td>
                <a asp-action="Edit" asp-route-id="@item.HotelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HotelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HotelId">Delete</a>
            </td>
                }
                else
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.HotelId">Details</a>
                    </td>
                }
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.table').DataTable({
                "columnDefs": [
                    {
                        "type": "num-fmt",  // Use num-fmt for price column
                        "targets": [3]      // Assuming price is the 4th column
                    },
                    {
                        "type": "num-fmt",  // Use num-fmt for rating column
                        "targets": [2]      // Assuming rating is the 3rd column
                    },
                    {
                        "orderable": true,
                        "targets": "_all"   // Make all columns sortable
                    }
                ]
            });
        });
    </script>
} 
